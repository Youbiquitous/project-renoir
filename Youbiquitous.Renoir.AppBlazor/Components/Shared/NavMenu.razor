@inherits NavMenuComponent

<div class="app-navbar navbar-dark">
    <div class="container-fluid">
        <div class="app-sidebar-header">
            <a href="/">
                <div class="d-flex align-items-center justify-content-center">
                    <div><img class="app-sidebar-header-logo" src="/images/renoir-pict.png" /></div>
                    <div class="app-sidebar-header-text">@Header</div>
                </div>
            </a>
        </div>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <div>
        @foreach (var item in Items)
        {
            if (item.IsDivider())
            {
                <div class="menu-separator" />
            }
            else
            {
                @if (item.HasSectionName())
                {
                    <div class="menu-section px-3">@item.SectionName</div>
                }
                <div class="nav-item px-3">
                    <NavLink class="nav-link px-2" href="@item.Url" Match="NavLinkMatch.All">
                        <span class="opacity-50 me-2 fa-fw @item.Icon"></span>
                        <span>@item.Label</span>
                    </NavLink>
                </div>
            }
        }
    </div>
</div>
